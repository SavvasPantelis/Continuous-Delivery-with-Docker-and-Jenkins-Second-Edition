pipeline {
    agent any
    environment {
        REGISTRY_URL = "localhost:5001"
        IMAGE_NAME = "spantelis20/calculator"
        IMAGE_TAG = "1.0"
    }

    triggers {
        pollSCM('* * * * *')  // Poll every minute
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Make gradlew Executable') {
            steps {
                sh 'chmod +x Chapter08/sample1/gradlew'
            }
        }

        stage('Run Tests') {
            steps {
                dir('Chapter08/sample1') {
                    sh './gradlew clean build test jacocoTestReport --no-daemon'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('Chapter08/sample1') {
                    sh 'docker build -t ${REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG} .'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                sh "docker push ${REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG}"
            }
        }

        stage('Run Container Tests') {
            steps {
                script {
                    sh """
                        docker run -d --name calculator ${REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG}
                        sleep 5
                        curl -s localhost:8080/div?a=6\\&b=2 | grep -q '3' && echo 'pass' || echo 'fail'
                        curl -s localhost:8080/div?a=6\\&b=0 | grep -q 'error' && echo 'pass' || echo 'fail'
                        docker rm -f calculator
                    """
                }
            }
        }

        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }
    }

    post {
        always {
            echo "Done. Cleaned workspace."
        }
    }
}

