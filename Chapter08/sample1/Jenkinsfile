pipeline {
    agent any  // This will run on any available agent

    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/SavvasPantelis/Continuous-Delivery-with-Docker-and-Jenkins-Second-Edition.git', branch: 'master'
                sh 'cd Chapter08/sample1 && chmod +x gradlew'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'cd Chapter08/sample1 && ./gradlew test'
            }
        }

        stage('Run Code Coverage Check') {
            steps {
                sh 'cd Chapter08/sample1 && ./gradlew jacocoTestCoverageVerification'
            }
            post {
                failure {
                    echo 'Code coverage test failed! Check the Jacoco report.'
                }
            }
        }

        stage('Run Checkstyle') {
            steps {
                sh 'cd Chapter08/sample1 && ./gradlew checkstyleMain'
            }
            post {
                always {
                    publishHTML(target: [
                        reportDir: 'Chapter08/sample1/build/reports/checkstyle',
                        reportFiles: 'main.html',
                        reportName: 'Checkstyle Report'
                    ])
                }
            }
        }
    }
}

