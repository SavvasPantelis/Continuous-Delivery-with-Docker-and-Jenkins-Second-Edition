pipeline {
    agent any
    stages {
        stage('Checkout') { steps { checkout scm } }
        stage('Build & Test') {
            steps { sh './gradlew clean test jacocoTestReport --no-daemon' }
        }
        stage('Coverage') {
            when { branch 'master' }
            steps { sh './gradlew jacocoTestReport --no-daemon' }
        }
    }
    post {
        always {
            jacoco execPattern: '**/build/jacoco/*.exec'
            echo currentBuild.currentResult == 'SUCCESS' ? 'tests pass!' : 'tests fail!'
        }
    }
}

